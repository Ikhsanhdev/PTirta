                </div>
                @* <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                    <button type="button" class="btn btn-primary">Konsultasi</button>
                </div> *@
            </div>
        </div>
    </div>
</section> <!-- End Produk Section -->

@section Scripts{
    <script>
        // Lengkapi data produk
        const productData = {
            'CURAH HUJAN TELEMETRI': {
                image: '/assets/img/produk/curahhujan.png',
                specs: [
                    'Tipe: Telemetri Curah Hujan Otomatis',
                    'Akurasi: ± 0.2 mm',
                    'Kemampuan: Pengukuran Real-time',
                    'Transmisi Data: Wireless/GSM',
                    'Cakupan Wilayah: Hingga 10 km'
                ],
                description: 'Alat pengukur curah hujan telemetri canggih yang memberikan data akurat dan real-time. Cocok untuk pemantauan lingkungan, pertanian, dan manajemen bencana.',
                category: 'hidrologi'
            },
            'DATA LOGGER TELEMETRI HGT_L01': {
                image: '/assets/img/produk/loggerlo1.png',
                specs: [
                    'Tipe: Data Logger Telemetri',
                    'Kapasitas Penyimpanan: 64 GB',
                    'Konektivitas: WiFi, GSM, Bluetooth',
                    'Daya Tahan Baterai: 30 hari',
                    'Sensor Terintegrasi: Suhu, Kelembaban'
                ],
                description: 'Data logger canggih untuk monitoring lingkungan dengan kemampuan transmisi data real-time dan penyimpanan data yang luas.',
                category: 'klimatologi'
            },
            'PEILSCHAAL': {
                image: '/assets/img/produk/piscal.png',
                specs: [
                    'Tipe: Alat Ukur Ketinggian Air',
                    'Akurasi: ± 1 cm',
                    'Bahan: Stainless Steel',
                    'Panjang: Dapat disesuaikan',
                    'Aplikasi: Pemantauan Hidrolik'
                ],
                description: 'Alat pengukur ketinggian air presisi untuk keperluan hidrologi dan manajemen sumber daya air.',
                category: 'hidrologi'
            },
            'AWLR SONAR': {
                image: '/assets/img/produk/AwlrSonar.png',
                specs: [
                    'Tipe: Automatic Water Level Recorder',
                    'Teknologi: Sensor Sonar',
                    'Jarak Pengukuran: 0-30 meter',
                    'Akurasi: ± 0.5 cm',
                    'Transmisi Data: Real-time'
                ],
                description: 'Sistem pencatat ketinggian air otomatis menggunakan teknologi sonar canggih untuk pemantauan berkelanjutan.',
                category: 'hidrologi'
            }
            // Tambahkan produk lainnya di sini
        };

        // Tangkap semua tombol "Lihat"
        document.querySelectorAll('.btn-primary').forEach(button => {
            button.addEventListener('click', function() {
                // Ambil judul produk
                const productTitle = this.closest('.card-body').querySelector('.card-title').textContent;
                
                // Ambil data produk
                const product = productData[productTitle];
                
                if (product) {
                    // Update modal
                    document.getElementById('modalProductTitle').textContent = productTitle;
                    document.getElementById('modalProductImage').src = product.image;
                    
                    // Update spesifikasi
                    const specsList = document.getElementById('modalProductSpecs');
                    specsList.innerHTML = product.specs.map(spec => `<li>${spec}</li>`).join('');
                    
                    // Update deskripsi
                    document.getElementById('modalProductDescription').textContent = product.description;
                    
                    // Tampilkan modal
                    var productModal = new bootstrap.Modal(document.getElementById('productModal'));
                    productModal.show();
                }
            });
        });

        // Menangani perubahan kategori filter
        document.getElementById('categoryFilter').addEventListener('change', function () {
            var selectedCategory = this.value;
            var products = document.querySelectorAll('.col-md-4');

            products.forEach(function (product) {
                const productTitle = product.querySelector('.card-title').textContent;
                const productInfo = productData[productTitle];

                if (selectedCategory === 'semua' || (productInfo && productInfo.category === selectedCategory)) {
                    product.style.display = 'block';
                } else {
                    product.style.display = 'none';
                }
            });
        });
    </script>
}