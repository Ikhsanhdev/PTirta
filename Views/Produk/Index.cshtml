@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Produk";
}

<!-- Produk Section -->
@section styles{
    <style>
        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-header {
            padding: 15px;
            border-bottom: none;
        }

        .card-img-top {
            width: 100%;
            height: auto;
            aspect-ratio: 8/9; /* Rasio 16:9 agar seragam */
            object-fit: cover; /* Memastikan gambar tidak terdistorsi */
            padding: 10px;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1rem;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            font-weight: bold;
            padding: 10px;
            border-radius: 5px;
        }

        .category-filter {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
            width: auto;
        }

        .category-filter select {
            width: 200px; /* Atur lebar select agar tidak terlalu besar */
        }

        .product-detail-image {
            max-width: 100%;
            height: auto;
            object-fit: contain;
        }

        .modal-product-specs {
            list-style-type: none;
            padding: 0;
        }

        .modal-product-specs li {
            margin-bottom: 10px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }
    </style>
}

