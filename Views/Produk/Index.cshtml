    <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productModalLabel">Detail Produk</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img id="modalProductImage" src="" alt="Produk" class="product-detail-image mb-3">
                        </div>
                        <div class="col-md-6">
                            <h4 id="modalProductTitle">Nama Produk</h4>
                            <ul class="modal-product-specs" id="modalProductSpecs">
                                <!-- Spesifikasi akan diisi secara dinamis -->
                            </ul>
                            <div class="mt-3">
                                <h5>Deskripsi</h5>
                                <p id="modalProductDescription">Deskripsi produk akan muncul di sini.</p>
                            </div>
                        </div>
