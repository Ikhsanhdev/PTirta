@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div
    class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a ap-controller="Dashboards" asp-action="Index" class="app-brand-link">
      <span class="app-brand-logo demo">
        @* @await Html.PartialAsync("../_Partials/_Macros") *@
        <img src="@Url.Content("~/assets/img/higertech.png")" alt="Higertech Logo" style="height: auto; max-height: 50px;">
      </span>
      @* <span class="app-brand-text demo menu-text fw-bold ms-2">Higertech</span> *@
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
      <i class="bx bx-chevron-left bx-sm d-flex align-items-center justify-content-center"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Full version menu-items *@
  <ul class="menu-inner py-1">
   
    <!-- Apps & Pages -->
    <li class="menu-header small text-uppercase">
      <span class="menu-header-text">Apps &amp; Pages</span>
    </li>
    <!-- Apps -->
    <li class='menu-item@(currentPage == "/Admin/Article" ? " active" : "")'>
      <a href="/Admin/Article" class="menu-link">
        <i class="menu-icon tf-icons bx bx-book-content"></i>
        <div>Article</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Admin/Project" ? " active" : "")'>
      <a href="/Admin/Project" class="menu-link">
        <i class="menu-icon tf-icons bx bx-briefcase-alt-2"></i>
        <div>Project</div>
      </a>
    </li>
    
    
    <
  </ul>

</aside>
<!-- / Menu -->
